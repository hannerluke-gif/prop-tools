{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Git commit message",
      "default": "deploy: site update"
    }
  ],
  "tasks": [
    {
      "label": "Sass Watch",
      "type": "shell",
      "command": "sass",
      "args": ["--watch","static/scss:static/css","--no-source-map","--load-path=node_modules"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Flask Dev",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["app.py"],
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "group": "build",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    },
    {
      "label": "Dev: Flask + Sass",
      "type": "shell",
      "command": "echo Dev stack running...",
      "dependsOn": ["Sass Watch", "Flask Dev"],
      "dependsOrder": "parallel",
      "runOptions": { "runOn": "folderOpen" },
      "problemMatcher": []
    },

    /* --- Commit + dual push deploy pipeline --- */
    {
      "label": "Git: Commit (if changes)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile","-Command",
        "git diff-index --quiet HEAD --; if ($LASTEXITCODE -ne 0) { git add -A; git commit -m \"${input:commitMessage}\" } else { Write-Host 'No changes to commit' }"
      ],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Push: GitHub (origin)",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile","-Command","git push origin main"],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Push: Heroku",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile","-Command","git push heroku main"],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Deploy: GitHub + Heroku",
      "type": "shell",
      "command": "echo Deploy complete",
      "dependsOn": ["Git: Commit (if changes)", "Push: GitHub (origin)", "Push: Heroku"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated" }
    }
  ]
}
